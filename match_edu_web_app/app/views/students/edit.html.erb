<div class="container">	
			<h1><%= @student.name %></h1>	
			<%= form_for(@student, url: {action: 'update'}) do |form| %>
				  <div class="form-group">
			      <%= form.label :name %>
			      <%= form.text_field :name, id: :name, class: 'form-control' %>
				  </div>
				  <div class="form-group">
				    <%= form.label :email %>
				    <%= form.text_field :email, id: :email, class: 'form-control' %>
				  </div>
				  <div class="form-group">
				    <% research_areas_array = @research_areas.map { |ra| [ra.area, ra.area] } %>
				    <%= form.select(:researcharea, options_for_select(research_areas_array,@student.researcharea)) %>
				  </div>
				  <%= submit_tag "Submit", class: "btn btn-default" %>

			<% end %>
		</div>